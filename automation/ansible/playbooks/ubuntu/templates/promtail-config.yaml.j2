server:
  http_listen_port: 9080
  grpc_listen_port: 0

positions:
  filename: {{ promtail_install_dir }}/positions/positions.yaml

clients:
  - url: http://{{ loki_server | default('loki.ghart.space') }}:3100/loki/api/v1/push

scrape_configs:
  - job_name: system
    static_configs:
      - targets:
          - localhost
        labels:
          job: varlogs
          host: {{ inventory_hostname }}
          __path__: /var/log/*log

  - job_name: syslog
    static_configs:
      - targets:
          - localhost
        labels:
          job: syslog
          host: {{ inventory_hostname }}
          __path__: /var/log/syslog

  - job_name: auth
    static_configs:
      - targets:
          - localhost
        labels:
          job: auth
          host: {{ inventory_hostname }}
          __path__: /var/log/auth.log

  - job_name: fail2ban
    static_configs:
      - targets:
          - localhost
        labels:
          job: fail2ban
          host: {{ inventory_hostname }}
          __path__: /var/log/fail2ban.log
